{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "global": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "registry": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "url": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "url"
          ]
        },
        "timezone": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "registry",
        "timezone"
      ]
    }
  },
  "required": [
    "global"
  ]
}
